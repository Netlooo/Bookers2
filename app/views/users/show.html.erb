<p id="notice">Signed in successfully.</p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render 'books/list', book: @book, user: @user_new %>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= image_tag @user.get_profile_image(100,100) %></td>
            <td><%= @user.name %></td>
            <td><%= @user.introduction %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

